<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.powerenergyhackathon2017.IndustryScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Electricity/ Power Management"
            android:textStyle="bold"
            android:onClick="toEPM_I"
            android:id="@+id/Power_I" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="116dp"
                android:layout_height="100dp"
                android:text="USAGE"
                android:textStyle="bold"
                android:onClick="toUsage_I"
                android:id="@+id/Usage_I" />

            <Button
                android:layout_width="118dp"
                android:layout_height="100dp"
                android:text="Unit Flow"
                android:onClick="toUnitFlow_I"
                android:textStyle="bold"
                android:id="@+id/Units_I" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text="Bills"
                android:onClick="toBill_I"
                android:textStyle="bold"
                android:id="@+id/Bills_I" />

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:text="Switch Controls"
            android:onClick="toSwitch_I"
            android:textStyle="bold"
            android:id="@+id/Switch_I" />
    </LinearLayout>
</RelativeLayout>
